{
    "name": "dalthaus/cms",
    "description": "A modern PHP CMS with MVC architecture",
    "type": "project",
    "license": "MIT",
    "require": {
        "php": ">=8.1",
        "ext-pdo": "*",
        "ext-mbstring": "*",
        "ext-json": "*",
        "ext-fileinfo": "*"
    },
    "require-dev": {
        "phpunit/phpunit": "^11.0",
        "mockery/mockery": "^1.6",
        "fakerphp/faker": "^1.23",
        "phpstan/phpstan": "^2.0",
        "squizlabs/php_codesniffer": "^3.7",
        "phpmd/phpmd": "^2.15",
        "roave/security-advisories": "dev-master"
    },
    "autoload": {
        "psr-4": {
            "CMS\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": [
            "phpunit"
        ],
        "test-coverage": [
            "phpunit --coverage-html tests/coverage"
        ],
        "test-unit": [
            "phpunit --testsuite Unit"
        ],
        "test-integration": [
            "phpunit --testsuite Integration"
        ],
        "test-feature": [
            "phpunit --testsuite Feature"
        ],
        "analyse": [
            "phpstan analyse src --level=8",
            "phpmd src text cleancode,codesize,controversial,design,naming,unusedcode"
        ],
        "cs-check": [
            "phpcs src tests --standard=PSR12"
        ],
        "cs-fix": [
            "phpcbf src tests --standard=PSR12"
        ],
        "quality": [
            "@cs-check",
            "@analyse",
            "@test"
        ]
    },
    "config": {
        "optimize-autoloader": true,
        "sort-packages": true,
        "allow-plugins": {
            "dealerdirect/phpcodesniffer-composer-installer": true
        }
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}